<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:android   = "http://schemas.android.com/apk/res/android"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id      = "com.bsdmasterindex.jtoast-demo"
    version   = "1.0.0"
    versionCode = "100" > <!-- versionCode is optional and Android only -->
    <!-- Tool Set Version -->    
    <preference name='phonegap-version' value='cli-7.1.0' />

    <name>JToast-test</name>
    <description>JToast test</description>
    <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">Jesse Monroy</author>

    <!-- Target Platforms -->
    <!-- Remove to test which platforms build by default. -->
    <platform name="android" />
    <platform name="ios" />

    <!-- App requested permission -->
    <preference name="permissions" value="none" />

    <!-- PLUGINS * PLUGINS * PLUGINS -->
    <plugin name="cordova-plugin-device" spec="~2.0.2" />

  </widget>
